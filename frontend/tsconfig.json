{
  "compilerOptions": {
    "strict": true,
    "outDir": "./build/",

    "noImplicitAny": true,
    "module": "ESNext",

    "target": "es5",
    "jsx": "react-jsx",

    "allowJs": true,
    "moduleResolution": "node",

    "baseUrl": ".",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  },

  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ],
}